{
  "manifest_version": 3,
  "name": "PhishPatrol - LLM powered Guardian",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; connect-src https://kavishnayeem-phishpatrol.hf.space ; object-src 'self'"
  },
  "host_permissions": ["https://kavishnayeem-phishpatrol.hf.space/*"],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
}
}